@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}





<div >
  


    @*@Html.Raw(Json.Serialize(Model.ScoresByTicker)).ToString()*@



    
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form method="post">
                <h4>Select Company</h4>
             
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Ticker"></label>
                    <input asp-for="Input.Ticker" class="form-control TickerDropdown"/>
                    <span asp-validation-for="Input.Ticker" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p></p>
                    <button type="submit" class="btn btn-primary">Generate Report</button>

                </div>

            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

    <script>

        var activeUsers= @Html.Raw(Json.Serialize(Model.TickersList));
        console.log(activeUsers);
        $(document).ready(function() {
            $(".TickerDropdown").kendoComboBox({
                index: 0,
                dataTextField: "text",
                dataValueField: "text",
                filter: "contains",
                dataSource: activeUsers
 
            });


            


        });
    </script>

</div>